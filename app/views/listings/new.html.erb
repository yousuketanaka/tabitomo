<%= render 'partial/navbar' %>
<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="text-center">
						<span style="font-size:24px;">TABITOMO 基本情報の作成</span>
					</div>
				</div>
			
				<div class="panel-body">			
					<!-- ここからフォーム -->
					<%= form_for @listing do |f| %>
					    <hr>
					    <div class="form-group">
					    	 <p><span class="glyphicon glyphicon-triangle-right"><strong>私ができるサービス</strong></p>
							 <%= check_box :service_type, {:class => "checkbox"}, :checked => false, :id => "hp" %>
							 <label for="hp" class="check_css">カフェトーク</label>
							 <%= check_box :service_type, {:class => "checkbox"}, :checked => false, :id => "hp" %>
							 <label for="hp" class="check_css">一緒にお食事</label>
							 <%= check_box :service_type, {:class => "checkbox"}, :checked => false, :id => "hp" %>
							 <label for="hp" class="check_css">一緒にお出かけ</label>
							 <%= check_box :service_type, {:class => "checkbox"}, :checked => false, :id => "hp" %>
							 <label for="hp" class="check_css">しっかりガイド</label>
						</div>
						<hr>
						<br>
						
						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label><span class="glyphicon glyphicon-triangle-right">居住国</label><br>
									<%= f.country_select :residentcountry, options_for_select(""), {}, { autofocus: 'true', class: 'form-control'} %>
								</div>
							</div>
						</div>
						<br>
						
						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label><span class="glyphicon glyphicon-triangle-right">居住都市</label><br>
									<%= f.text_field :residentcity, autofocus: true, :placeholder => "使用できる言語を1つ書いてください。", :class => 'form-control' %>
								</div>
							</div>
						</div>
						<br>
					    
					    <hr>
						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label><span class="glyphicon glyphicon-triangle-right">使用できる言語</label>
									<%= f.text_field :use_language, autofocus: true, :placeholder => "使用できる言語を1つ書いてください。", :class => 'form-control' %>
								</div>
							</div>
						</div>
						<br>
						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label><span class="glyphicon glyphicon-triangle-right">言語のレベル</label>
									<%= f.select :use_language_level, [["母国語レベル","母国語レベル"], ["ビジネスレベル","ビジネスレベル"], ["日常会話レベル","日常会話レベル"], ["初級レベル","初級レベル"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
								</div>
							</div>
						</div>
						<br>
						
						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label class="scl-area"><span class="glyphicon glyphicon-triangle-right">使用できる言語(上記の言語以外で使用できる言語があれば書いてください。)</label>
									<%= f.text_field :language_2, autofocus: true, :placeholder => "使用できる言語を1つ書いてください。", :class => 'form-control' %>
								</div>
							</div>
						</div>
						<br>

						<div class="row">
							<div class="col-md-12 select">
								<div class="form-group">
									<label class="scl-area"><span class="glyphicon glyphicon-triangle-right">言語のレベル</label>
									<%= f.select :language_level_2, [["母国語レベル","母国語レベル"], ["ビジネスレベル","ビジネスレベル"], ["日常会話レベル","日常会話レベル"], ["初級レベル","初級レベル"]], {prompt:"選択してください"}, {autofocus: 'true', class: 'form-control'} %>
								</div>
							</div>
						</div>
						<br>
						<div class="actions">
							<%= f.submit "保存", class: "btn btn-danger" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>

</div>