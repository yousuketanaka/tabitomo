<%= render 'partial/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-md-3 row-space-4">
    <!-- 自分のプロフィールへのリンク -->
    <%= link_to "自分のプロフィールを確認する", user_path(current_user), class: "btn btn-default btn-full" %>
    </div>
    <%= render 'partial/deviseErrorMsg' %>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">基本情報を編集</div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  　　　　    　　<%= render 'partial/deviseErrorMsg' %>
              <p class="text-center"><strong><span class="basicinfo-title">基本情報</span></strong></p>
              <hr>
              <div class="form-group">
                <%= f.label :名前 %><span class="required">必須</span><br />
                <%= f.text_field :name, autofocus: true, :placeholder => "名前", :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :Email %><span class="required">必須</span><br />
                <%= f.email_field :email, :placeholder => "Email", :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :電話番号 %><br />
                <%= f.text_field :phone_number, :placeholder => "電話番号", :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :新しいパスワード %> <i>(変更しない場合は空欄で構いません)</i><br />
                <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :新しいパスワードの確認 %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
              </div>
              <hr>
              <p class="text-center"><strong><span class="basicinfo-title">基本情報の追加</span></strong></p>
              <hr>
              
              <div class="form-group">
                <%= f.label :年齢 %><span class="required">必須</span><br />
                <%= f.select :age, (18..99), {prompt:"年齢を選択してください"}, {required: 'true', autofocus: 'true', class: "form-control" } %>
              </div>

              <div class="form-group">
                <%= f.label :性別 %><span class="required">必須</span><br/>
                <%= f.select :sex, [["男性","男性"], ["女性","女性"], ["どちらでもない","どちらでもない"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
              </div>

              <div class="form-group">
                <%= f.label :国籍 %><span class="required">必須</span><br/>
                <%= f.country_select :nationality, options_for_select(""), {prompt:"国を選択してください"}, { autofocus: 'true', class: 'form-control'} %>
              </div>
              <div class="form-group">
                <%= f.label :お仕事 %><span class="required">必須</span><br/>
                <%= f.text_field :job, :placeholder => "あなたのお仕事 (例) Webデザイナー/会計士/公務員/医者 など", :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :イメージ画像 %><span class="required">必須</span><br/>
                <%= f.file_field :image,:class => 'form-control' %>
                </div>
              <div class="form-group">
                <%= f.label :自己紹介 %><br/>
                <%= f.text_area :description, rows: 5, cols: 25,  :placeholder => "自己紹介文", :class => 'form-control' %>
              </div>
              <div class="actions">
                <%= f.submit "基本情報を更新", :class => "btn btn-primary" %>
              </div>
            <% end %>
          </div>
      </div>
    </div><!--col-md-9-->
  </div>  <!--row-->
</div> <!--container-->